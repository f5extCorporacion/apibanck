generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  CAJA
  ADMIN
}

enum Status {
  ACTIVO
  INACTIVO
}

model Users {
  id         Int      @id @default(autoincrement())
  name       String
  cedula     String
  email      String
  phone      String
  password   String
  location   String
  rol        Role     @default(CAJA)
  status     Status   @default(ACTIVO)
  created_at DateTime @default(now())
  cuentaId   Cuenta[]
}

model Cuenta {
  id            Int     @id @default(autoincrement())
  usuarioId     Int
  usuario       Users     @relation(fields: [usuarioId], references: [id])
  numerocuenta String 
  dineroCuenta  Float   @default(0)
  status        Status   @default(ACTIVO)
  created_at    DateTime @default(now())
  transaccion  Transaccion[]
  tarjeta      Tarjeta[]
}

model Tarjeta {
  id            Int      @id @default(autoincrement())
  numeroTarjeta String  @unique
  pin           String
  dineroTarjeta Float   @default(0)
  cv            String
  cuenta        Cuenta   @relation(fields: [cuentaId], references: [id])
  cuentaId      Int
  status        Status   @default(ACTIVO)
  created_at    DateTime @default(now())
}

model Transaccion {
  id              Int      @id @default(autoincrement())
  fecha           DateTime @default(now())
  monto           Float
  cuentaOrigenId  Int
  cuentaDestinoId Int
  tipo            String   // TRANSFERENCIA, DEPOSITO, etc.
  estado          String   @default("COMPLETADA") // o "FALLIDA"
  cuenta         Cuenta   @relation(fields: [cuentaId], references: [id])
  cuentaId       Int
  status         Status   @default(ACTIVO)
  created_at     DateTime @default(now())
}
